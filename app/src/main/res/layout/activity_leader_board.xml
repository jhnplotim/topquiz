<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".LeaderBoardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_leader_board_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Top 5 Leader Board"/>
        <Button
            android:id="@+id/activity_leader_board_sort_scores_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="SORT BY SCORES"/>
        <Button
            android:id="@+id/activity_leader_board_sort_names_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="SORT BY NAMES"/>

    </LinearLayout>



<TextView
    android:id="@+id/activity_leader_board_user1_txt"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:textColor="@color/colorAccent"
    android:background="@android:color/white"
    android:textSize="20sp"
    android:text="Answer1"
    android:visibility="invisible"/>

<TextView
    android:id="@+id/activity_leader_board_user2_txt"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:textColor="@color/colorAccent"
    android:background="@android:color/white"
    android:textSize="20sp"
    android:text="Answer2"
    android:visibility="invisible"/>

<TextView
    android:id="@+id/activity_leader_board_user3_txt"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:textColor="@color/colorAccent"
    android:background="@android:color/white"
    android:textSize="20sp"
    android:text="Answer3"
    android:visibility="invisible"/>

<TextView
    android:id="@+id/activity_leader_board_user4_txt"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:textColor="@color/colorAccent"
    android:background="@android:color/white"
    android:textSize="20sp"
    android:text="Answer4"
    android:visibility="invisible"/>

    <TextView
        android:id="@+id/activity_leader_board_user5_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:textColor="@color/colorAccent"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:text="Answer5"
        android:visibility="invisible"/>


</LinearLayout>